{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build my project", // Task name...tbh I didn't know what to call it
            "type": "shell",  // Specifies the type of task
            "command": "clang++", // Compiler command, clang++ is the C++ compiler I'm using for Mac
            "args": [ 
                "-std=c++17",       // C++ standard version
                "-stdlib=libc++",   // Specifies the C++ standard library to use, libc++ is the one I'm using in this case. Seems to be standard for Mac.
                "-g",               // Generates debug information
                "${workspaceFolder}/jacuzzicoding/jc_toolkit_mac/jctool/jctool.cpp",  // Input source file
                "-o",               // Specifies the output file
                "${workspaceFolder}/jacuzzicoding/jc_toolkit_mac/jctool/jctool"       // Output executable name
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Task generated by Compiler."
        }
    ]
}
